@model IEnumerable<BitirmeProjesi.Data.Entities.JsonEntities.AppUser>

@{
    ViewData["Title"] = "Index";
}

<style>
    /* Sayfa ve tablo stilleri */
    body {
        font-family: 'Roboto', sans-serif; /* Modern bir font */
        background-color: #f5f5f5; /* Hafif gri arka plan */
        margin: 0;
        padding: 0;
    }

    table {
        border-collapse: collapse; /* Tablo kenarlarını birleştirir */
        width: 100%; /* Tabloyu tam genişlikte yapar */
        background-color: white; /* Tablo arka planını beyaz yapar */
    }

    table th, table td {
        border: 1px solid #ddd; /* Tablo hücrelerine hafif gri kenarlık ekler */
        padding: 8px; /* Hücreler arasında boşluk */
        text-align: left; /* Metin hizalaması */
    }

    table thead {
        background-color: #333; /* Başlıklar için koyu arka plan */
        color: white; /* Başlıklar için beyaz metin */
    }

    table tbody tr:hover {
        background-color: #f1f1f1; /* Satır üzerine gelince hafif gri arka plan */
    }

    .btn {
        border-radius: 4px; /* Yuvarlatılmış butonlar */
    }

    .btn-primary {
        background-color: #007bff; /* Mavi buton */
        color: white; /* Beyaz yazı */
        border: none; /* Kenarlık yok */
    }

    .btn-secondary {
        background-color: #6c757d; /* Gri buton */
        color: white; /* Beyaz yazı */
        border: none; /* Kenarlık yok */
    }

    .btn-primary:hover, .btn-secondary:hover {
        opacity: 0.8; /* Buton üzerine gelince soluklaşır */
    }
    /* Buton Stilleri */
    .btn {
        padding: 8px 16px; /* Yeterli boşluk sağlar */
        border-radius: 6px; /* Yuvarlatılmış köşeler */
        border: none; /* Kenarlık kaldırılır */
        color: white; /* Beyaz yazı rengi */
        font-weight: bold; /* Kalın yazı */
        transition: background-color 0.3s; /* Renk geçişi */
    }

    .btn-primary {
        background-color: #3498db; /* Mavi tonlu ana buton rengi */
    }

        .btn-primary:hover {
            background-color: #2980b9; /* Hover efekti */
        }

    .btn-success {
        background-color: #2ecc71; /* Yeşil tonlu başarı butonu */
    }

        .btn-success:hover {
            background-color: #27ae60; /* Hover efekti */
        }

    .btn-warning {
        background-color: #f39c12; /* Sarı tonlu uyarı butonu */
    }

        .btn-warning:hover {
            background-color: #e67e22; /* Hover efekti */
        }

    .btn-info {
        background-color: #1abc9c; /* Açık mavi-yeşil tonlu bilgi butonu */
    }

        .btn-info:hover {
            background-color: #16a085; /* Hover efekti */
        }

    .btn-danger {
        background-color: #e74c3c; /* Kırmızı tonlu tehlike butonu */
    }

        .btn-danger:hover {
            background-color: #c0392b; /* Hover efekti */
        }
</style>

<div class="container mt-5">
    <h1>Kullanıcı Listesi (AppUsers)</h1>
    <!-- Admin Panel Butonu -->
    <a href="/Administrator" class="btn btn-info btn-lg mb-3">
        <i class="fa fa-cogs"></i> Admin Panel
    </a>
    <!-- Yeni Kullanıcı Oluşturma Butonu -->
    <a asp-action="Create" class="btn btn-success btn-lg mb-3">
        <i class="fa fa-user-plus"></i> Yeni Kullanıcı Oluştur
    </a>
    <br /><br />
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.UserName)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(model => model.Role)</th>
                <th>@Html.DisplayNameFor(model => model.Adres)</th>
                <th>@Html.DisplayNameFor(model => model.City)</th>
                <th>@Html.DisplayNameFor(model => model.Country)</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.Role)</td>
                    <td>@Html.DisplayFor(modelItem => item.Adres)</td>
                    <td>@Html.DisplayFor(modelItem => item.City)</td>
                    <td>@Html.DisplayFor(modelItem => item.Country)</td>
                    <td>
                        <!-- Güncelleme Butonu -->
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                            <i class="fa fa-edit"></i> Güncelle
                        </a>
                        <!-- Detay Butonu -->
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                            <i class="fa fa-info-circle"></i> Detay
                        </a><br /><br />
                        <!-- Silme Butonu -->
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm">
                                <i class="fa fa-trash"></i> Sil
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
