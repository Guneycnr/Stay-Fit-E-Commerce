@model BitirmeProjesi.Data.Entities.JsonEntities.AppUser

@{
    ViewData["Title"] = "Details";
}

<style>
    /* Sayfa Stili */
    body {
        font-family: 'Roboto', sans-serif; /* Modern font */
        background-color: #f5f5f5; /* Hafif gri arka plan */
    }

    /* Tablo Stili */
    table {
        border-collapse: collapse; /* Kenarları birleştirir */
        width: 100%; /* Tam genişlikte tablo */
        background-color: white; /* Beyaz arka plan */
    }

        table th, table td {
            border: 1px solid #ddd; /* Hafif gri kenarlık */
            padding: 8px; /* İç boşluk */
            text-align: left; /* Metin hizalaması */
        }

        table tbody tr:hover {
            background-color: #f1f1f1; /* Hover efekti */
        }

        table thead {
            background-color: #333; /* Başlık için koyu arka plan */
            color: white; /* Beyaz başlık yazısı */
        }

    /* Butonlar için stil */
    .btn {
        border-radius: 4px; /* Yuvarlatılmış köşeler */
        padding: 8px 16px; /* Yeterli boşluk */
        color: white; /* Beyaz yazı rengi */
        border: none; /* Kenarlık yok */
    }

    .btn-warning {
        background-color: #f39c12; /* Sarı tonlu uyarı butonu */
    }

    .btn-secondary {
        background-color: #6c757d; /* Gri buton */
    }
</style>

<div class="container mt-5">
    <!-- Sayfayı ortalar ve üst boşluk ekler -->
    <h1>Kullanıcı Detayları</h1> <!-- Başlık -->

    <table class="table">
        <!-- Şık ve düzenli tablo -->
        <thead>
            <!-- Tablo başlıkları -->
            <tr>
                <th>Property</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>
            <!-- Tablo içeriği -->
            <tr>
                <td>@Html.DisplayNameFor(model => model.Id)</td>
                <td>@Html.DisplayFor(model => model.Id)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.UserName)</td>
                <td>@Html.DisplayFor(model => model.UserName)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.Email)</td>
                <td>@Html.DisplayFor(model => model.Email)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.PhoneNumber)</td>
                <td>@Html.DisplayFor(model => model.PhoneNumber)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.Role)</td>
                <td>@Html.DisplayFor(model => model.Role)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.Adres)</td>
                <td>@Html.DisplayFor(model => model.Adres)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.City)</td>
                <td>@Html.DisplayFor(model => model.City)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.Country)</td>
                <td>@Html.DisplayFor(model => model.Country)</td>
            </tr>
        </tbody>
    </table>
    <br />
    <div class="mt-4">
        <!-- Butonlar ve boşluk -->
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Güncelle</a> <!-- Güncelle butonu -->
        <a asp-action="Index" class="btn btn-secondary ml-2">Geri Dön</a> <!-- Geri dön butonu -->
    </div>
</div>
