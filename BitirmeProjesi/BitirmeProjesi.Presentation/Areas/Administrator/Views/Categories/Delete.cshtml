@model BitirmeProjesi.Data.Entities.JsonEntities.Category

@{
    ViewData["Title"] = "Delete";
}

<style>
    /* Genel Sayfa Stili */
    body {
        font-family: 'Roboto', sans-serif; /* Modern font */
        background-color: #f5f5f5; /* Hafif gri arka plan */
        margin: 0;
        padding: 0;
    }

    /* Başlık ve Alt Çizgi Stili */
    h1, h3 {
        color: #333; /* Koyu gri başlık rengi */
    }

    hr {
        border: 0; /* Alt çizgi kenarlığı kaldırılır */
        height: 1px;
        background-color: #ddd; /* Hafif gri çizgi */
    }

    /* Tanımlama Listesi Stili */
    dt {
        font-weight: bold; /* Başlık için kalın yazı */
        color: #333; /* Koyu gri renk */
    }

    dd {
        margin-left: 0; /* Varsayılan boşluk kaldırılır */
        padding-left: 16px; /* Sol boşluk eklenir */
        color: #555; /* Metin rengi */
    }

    /* Buton Stili */
    .btn {
        border-radius: 4px; /* Yuvarlatılmış köşeler */
        padding: 8px 16px; /* İç boşluk */
        color: white; /* Beyaz yazı rengi */
        border: none; /* Kenarlık yok */
        transition: background-color 0.3s; /* Hover geçiş efekti */
    }

    .btn-danger {
        background-color: #e74c3c; /* Kırmızı arka plan */
    }

    .btn-danger:hover {
        background-color: #c0392b; /* Hover efekti için koyulaşma */
    }

    .btn-link {
        text-decoration: none; /* Alt çizgi kaldırılır */
        color: white; /* Beyaz yazı */
        border-radius: 4px; /* Yuvarlatılmış köşeler */
        padding: 8px 16px; /* İç boşluk */
        background-color: #007bff; /* Mavi arka plan */
        transition: background-color 0.3s; /* Hover geçiş efekti */
    }

    .btn-link:hover {
        background-color: #0056b3; /* Hover efekti */
    }
</style>

<div class="container mt-5"> <!-- Sayfayı ortalar ve üst boşluk sağlar -->
    <h1>Sil</h1> <!-- Başlık -->

    <h3>Bu veriyi silmek istediğine emin misin?</h3> <!-- Silme uyarısı -->

    <div> <!-- İçerik alanı -->
        <h4>Category</h4>
        <hr />
        <dl class="row"> <!-- Tanımlama listesi -->
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.CategoryName)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.CategoryName)</dd>
        </dl>
        
        <form asp-action="Delete"> <!-- Silme formu -->
            <input type="hidden" asp-for="Id" /> <!-- Gizli kimlik alanı -->
            <input type="submit" value="Sil" class="btn btn-danger" /> <!-- Sil butonu -->
            <a asp-action="Index" class="btn-link ml-3">Geri Dön</a> <!-- Buton benzeri bağlantı -->
        </form>
    </div>
</div>
