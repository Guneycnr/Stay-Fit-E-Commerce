@model BitirmeProjesi.Data.Entities.JsonEntities.Category

@{
    ViewData["Title"] = "Details";
}

<style>
    /* Genel Sayfa Stili */
    body {
        font-family: 'Roboto', sans-serif; /* Modern font */
        background-color: #f5f5f5; /* Hafif gri arka plan */
        margin: 0;
        padding: 0;
    }

    /* Tablo Stili */
    .table {
        border-collapse: collapse; /* Hücre kenarlarını birleştirir */
        width: 100%; /* Tam genişlikte tablo */
        background-color: white; /* Beyaz arka plan */
    }

        .table th, .table td {
            border: 1px solid #ddd; /* Hafif gri kenarlık */
            padding: 8px; /* İç boşluk */
            text-align: left; /* Metin hizalaması */
        }

        .table thead {
            background-color: #333; /* Başlıklar için koyu arka plan */
            color: white; /* Beyaz yazı */
        }

        .table tbody tr:hover {
            background-color: #f1f1f1; /* Satır üzerine gelindiğinde hafif gri arka plan */
        }

    /* Buton Stili */
    .btn-link {
        border-radius: 4px; /* Yuvarlatılmış köşeler */
        padding: 8px 16px; /* İç boşluk */
        color: white; /* Beyaz yazı rengi */
        border: none; /* Kenarlık yok */
        background-color: #007bff; /* Mavi tonlu arka plan */
        transition: background-color 0.3s; /* Hover geçiş efekti */
    }

        .btn-link:hover {
            background-color: #0056b3; /* Hover efekti için koyulaşma */
        }
</style>

<div class="container mt-5">
    <!-- Sayfayı ortalar ve üst boşluk sağlar -->
    <h1>Detay</h1> <!-- Başlık -->

    <table class="table table-striped">
        <!-- Şık bir tablo -->
        <thead>
            <!-- Tablo başlıkları -->
            <tr>
                <th>Özellik</th>
                <th>Değer</th>
            </tr>
        </thead>
        <tbody>
            <!-- Tablo içeriği -->
            <tr>
                <td>@Html.DisplayNameFor(model => model.Id)</td>
                <td>@Html.DisplayFor(model => model.Id)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.CategoryName)</td>
                <td>@Html.DisplayFor(model => model.CategoryName)</td>
            </tr>
        </tbody>
    </table>
    <br />
    <div>
        <a asp-action="Index" class="btn-link">Geri Dön</a> <!-- Buton benzeri "Geri Dön" -->
    </div>
</div>
