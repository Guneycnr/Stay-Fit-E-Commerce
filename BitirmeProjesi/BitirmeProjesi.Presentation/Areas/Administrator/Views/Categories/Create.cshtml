@model BitirmeProjesi.Data.Entities.JsonEntities.Category

@{
    ViewData["Title"] = "Create";
}

<style>
    /* Genel Sayfa Stili */
    body {
        font-family: 'Roboto', sans-serif; /* Modern font */
        background-color: #f5f5f5; /* Hafif gri arka plan */
        margin: 0;
        padding: 0;
    }

    /* Başlık Stili */
    h1 {
        color: #333; /* Koyu gri başlık rengi */
    }

    hr {
        border: 0; /* Alt çizgi kenarlığı kaldırılır */
        height: 1px;
        background-color: #ddd; /* Hafif gri çizgi */
    }

    /* Form Stili */
    .form-group {
        margin-bottom: 1rem; /* Form elemanları arasında boşluk */
    }

    input, select {
        border: 1px solid #ccc; /* Hafif gri kenarlık */
        border-radius: 4px; /* Yuvarlatılmış köşeler */
        padding: 0.5rem; /* İç boşluk */
    }

        input:focus, select:focus {
            border-color: #007bff; /* Odaklanınca mavi kenarlık */
            outline: none;
        }

    /* Buton Stili */
    .btn {
        border-radius: 4px; /* Yuvarlatılmış köşeler */
        padding: 8px 16px; /* İç boşluk */
        color: white; /* Beyaz yazı rengi */
        border: none; /* Kenarlık yok */
        transition: background-color 0.3s; /* Hover efekti */
    }

    .btn-primary {
        background-color: #007bff; /* Ana renkli buton */
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Hover efekti için koyulaşma */
        }

    /* Geri Dön Bağlantısı için Stil */
    .btn-link {
        display: inline-block; /* Buton benzeri düzen */
        padding: 8px 16px; /* İç boşluk */
        border-radius: 4px; /* Yuvarlatılmış köşeler */
        text-decoration: none; /* Alt çizgi yok */
        color: white; /* Beyaz yazı */
        background-color: #007bff; /* Mavi arka plan */
        transition: background-color 0.3s; /* Hover geçiş efekti */
    }

        .btn-link:hover {
            background-color: #0056b3; /* Hover efekti için koyulaşma */
        }
</style>

<div class="container mt-5">
    <!-- Sayfayı ortalar ve üst boşluk sağlar -->
    <h1>Create</h1> <!-- Başlık -->

    <h4>Category</h4>
    <hr />

    <div class="row">
        <!-- Form alanı -->
        <div class="col-md-6 offset-md-3">
            <!-- Formu ortalar -->
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div> <!-- Hataları gösterir -->
                <div class="form-group">
                    <!-- Form alanları arasında boşluk -->
                    <label asp-for="CategoryName" class="control-label"></label>
                    <input asp-for="CategoryName" class="form-control" /> <!-- Kategori adı için giriş -->
                    <span asp-validation-for="CategoryName" class="text-danger"></span> <!-- Hata mesajı -->
                </div>
                <div class="form-group">
                    <!-- Kaydet butonu -->
                    <input type="submit" value="Kaydet" class="btn btn-primary" /> <!-- Buton rengi ve yuvarlatılmış köşeler -->
                </div>
            </form>
        </div>
    </div>

    <div>
        <!-- Geri dön butonu -->
        <a asp-action="Index" class="btn-link">Geri Dön</a> <!-- Buton benzeri görünüm -->
    </div>
</div>
