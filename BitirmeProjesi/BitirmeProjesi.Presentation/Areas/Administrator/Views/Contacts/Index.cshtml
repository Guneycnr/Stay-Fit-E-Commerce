@model IEnumerable<BitirmeProjesi.Data.Entities.JsonEntities.Contact>

@{
    ViewData["Title"] = "Index";
}

<style>
    /* Genel Sayfa Stili */
    body {
        font-family: 'Roboto', sans-serif; /* Modern font */
        background-color: #f5f5f5; /* Hafif gri arka plan */
    }

    /* Tablo Stili */
    .table {
        border-collapse: collapse; /* Hücre kenarlarını birleştirir */
        width: 100%; /* Tam genişlikte tablo */
        background-color: white; /* Beyaz arka plan */
    }

        .table th, .table td {
            border: 1px solid #ddd; /* Hafif gri kenarlık */
            padding: 8px; /* Hücreler arasında boşluk */
            text-align: left; /* Metin hizalaması */
        }

        .table tbody tr:hover {
            background-color: #f1f1f1; /* Satır üzerine gelindiğinde hafif gri arka plan */
        }

    /* Buton Stili */
    .btn {
        border-radius: 4px; /* Yuvarlatılmış köşeler */
        padding: 8px 16px; /* İç boşluk */
        border: none; /* Kenarlık kaldırıldı */
        color: white; /* Beyaz yazı rengi */
        transition: background-color 0.3s; /* Hover geçiş efekti */
    }

    .btn-primary {
        background-color: #007bff; /* Mavi tonlu ana buton */
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Hover efekti için koyulaşma */
        }

    .btn-danger {
        background-color: #e74c3c; /* Kırmızı tonlu tehlike butonu */
    }

        .btn-danger:hover {
            background-color: #c0392b; /* Hover efekti için koyulaşma */
        }

    .btn-info {
        background-color: #1abc9c; /* Açık mavi-yeşil tonlu bilgi butonu */
    }

        .btn-info:hover {
            background-color: #16a085; /* Hover efekti */
        }

    /* Link Stili */
    a {
        text-decoration: none; /* Alt çizgi yok */
        color: #007bff; /* Mavi tonlu metin rengi */
    }

        a:hover {
            text-decoration: underline; /* Üzerine gelince altı çizilir */
        }
</style>

<div class="container mt-5">
    <!-- Sayfayı ortalar ve üst boşluk sağlar -->
    <h1>Contacts</h1> <!-- Başlık -->

    <p>
        <a href="/Administrator" class="btn btn-info btn-lg mb-3">
            <i class="fa fa-cogs"></i> Admin Panel
        </a>    
        <a asp-action="Create" class="btn btn-primary ml-3">Yeni Ekle</a> <!-- Ana buton -->
    </p>

    <table class="table table-striped table-hover">
        <!-- Şık tablo -->
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.Message)</th>
                <th>Eylemler</th> <!-- Eylem başlığı -->
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.Message)</td>
                    <td>
                        <div class="action-links">
                            <!-- Eylem bağlantılarını hizalar -->
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Detay</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger ml-2">Sil</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
