@model BitirmeProjesi.Data.Entities.JsonEntities.Comment

@{
    ViewData["Title"] = "Create";
}

<style>
    /* Genel Sayfa Stili */
    body {
        font-family: 'Roboto', sans-serif; /* Modern font */
        background-color: #f5f5f5; /* Hafif gri arka plan */
    }

    /* Başlık Stili */
    h1, h4 {
        color: #333; /* Koyu gri başlık rengi */
    }

    hr {
        border: 0; /* Alt çizgi kenarlığı kaldırılır */
        height: 1px;
        background-color: #ddd; /* Hafif gri alt çizgi */
    }

    /* Form Stili */
    .form-group {
        margin-bottom: 1rem; /* Form alanları arasında boşluk */
    }

    input, select {
        border: 1px solid #ccc; /* Hafif gri kenarlık */
        border-radius: 4px; /* Yuvarlatılmış köşeler */
        padding: 0.5rem; /* İç boşluk */
    }

        input:focus, select:focus {
            border-color: #007bff; /* Odaklanınca mavi kenarlık */
            outline: none; /* Odaklanmada kenarlık efektleri kaldırılır */
        }

    /* Buton Stili */
    .btn {
        border-radius: 4px; /* Yuvarlatılmış köşeler */
        padding: 8px 16px; /* İç boşluk */
        color: white; /* Beyaz yazı rengi */
        border: none; /* Kenarlık yok */
        transition: background-color 0.3s; /* Hover geçiş efekti */
    }

    .btn-primary {
        background-color: #007bff; /* Mavi tonlu ana buton */
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Hover efekti için koyulaşma */
        }

    .btn-link {
        padding: 8px 16px; /* İç boşluk */
        border-radius: 4px; /* Yuvarlatılmış köşeler */
        text-decoration: none; /* Alt çizgi yok */
        color: white; /* Beyaz yazı rengi */
        background-color: #007bff; /* Mavi arka plan */
        transition: background-color 0.3s; /* Hover efekti */
    }

        .btn-link:hover {
            background-color: #0056b3; /* Hover efekti için koyulaşma */
        }
</style>

<div class="container mt-5">
    <!-- Sayfayı ortalar ve üst boşluk sağlar -->
    <h1>Yorum Oluştur</h1> <!-- Başlık -->

    <h4>Yorum Detay</h4>
    <hr />

    <div class="row">
        <!-- Form alanı -->
        <div class="col-md-6 offset-md-3">
            <!-- Formu ortalar -->
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div> <!-- Hataları gösterir -->
                <!-- Form alanları -->
                <div class="form-group">
                    <label asp-for="ProductId" class="control-label"></label>
                    <input asp-for="ProductId" class="form-control" /> <!-- Ürün Kimliği -->
                    <span asp-validation-for="ProductId" class="text-danger"></span> <!-- Hata mesajı -->
                </div>

                <div class="form-group">
                    <label asp-for="AppUserId" class="control-label"></label>
                    <input asp-for="AppUserId" class="form-control" /> <!-- Kullanıcı Kimliği -->
                    <span asp-validation-for="AppUserId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CommentLine" class="control-label"></label>
                    <input asp-for="CommentLine" class="form-control" /> <!-- Yorum satırı -->
                    <span asp-validation-for="CommentLine" class="text-danger"></span> <!-- Hata mesajı -->
                </div>

                <!-- Kaydet Butonu -->
                <div class="form-group">
                    <input type="submit" value="Kaydet" class="btn btn-primary" /> <!-- Kaydet butonu -->
                </div>
            </form>
        </div>
    </div>

    <div>
        <!-- Geri Dön Bağlantısı -->
        <a asp-action="Index" class="btn-link">Geri Dön</a> <!-- Buton benzeri "Geri Dön" -->
    </div>
</div>
