@model BitirmeProjesi.Data.Entities.JsonEntities.Order

@{
    ViewData["Title"] = "Delete";
}

<style>
    /* Genel Sayfa Stili */
    body {
        font-family: 'Roboto', sans-serif; /* Modern font */
        background-color: #f5f5f5; /* Hafif gri arka plan */
    }

    /* Başlık Stili */
    h1, h3 {
        color: #333; /* Koyu gri başlık rengi */
    }

    hr {
        border: 0; /* Alt çizgi kenarlığı kaldırılır */
        height: 1px;
        background-color: #ddd; /* Hafif gri çizgi */
    }

    /* Tanımlama Listesi Stili */
    dt {
        font-weight: bold; /* Kalın yazı */
        color: #333; /* Başlık rengi */
    }

    dd {
        margin-left: 0; /* Varsayılan boşluk kaldırılır */
        padding-left: 16px; /* Sol boşluk eklenir */
        color: #555; /* Metin rengi */
    }

    /* Buton Stili */
    .btn {
        border-radius: 4px; /* Yuvarlatılmış köşeler */
        padding: 8px 16px; /* İç boşluk */
        border: none; /* Kenarlık yok */
        transition: background-color 0.3s; /* Hover geçiş efekti */
    }

    .btn-danger {
        background-color: #e74c3c; /* Kırmızı tonlu tehlike butonu */
        color: white; /* Beyaz yazı rengi */
    }

        .btn-danger:hover {
            background-color: #c0392b; /* Hover efekti için koyulaşma */
        }

    .btn-link {
        border-radius: 4px; /* Yuvarlatılmış köşeler */
        padding: 8px 16px; /* İç boşluk */
        color: white; /* Beyaz yazı rengi */
        background-color: #007bff; /* Mavi tonlu arka plan */
        text-decoration: none; /* Alt çizgi yok */
        transition: background-color 0.3s; /* Hover geçiş efekti */
    }

        .btn-link:hover {
            background-color: #0056b3; /* Hover efekti için koyulaşma */
        }
</style>

<div class="container mt-5">
    <!-- Sayfayı ortalar ve üst boşluk sağlar -->
    <h1>Sil</h1> <!-- Başlık -->

    <h3>Bu veriyi silmek istediğinize emin misiniz?</h3> <!-- Silme uyarısı -->

    <div>
        <!-- Tanımlama listesi ve içerik -->
        <h4>Order (Sipariş) </h4>
        <hr />
        <dl class="row">
            <!-- Tanımlama listesi -->
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.UserName)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.UserName)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.OrderDate)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.OrderDate)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.CompanyName)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.CompanyName)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Adres)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Adres)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.TotalPrice)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.TotalPrice)</dd>
        </dl>

        <form asp-action="Delete">
            <!-- Silme formu -->
            <input type="hidden" asp-for="Id" /> <!-- Gizli kimlik alanı -->
            <input type="submit" value="Delete" class="btn btn-danger" /> <!-- Sil butonu -->
            <a asp-action="Index" class="btn-link ml-3">Geri Dön</a> <!-- Geri Dön bağlantısı -->
        </form>
    </div>
</div>